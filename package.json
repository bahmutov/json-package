{
  "name": "json-package",
  "description": "Fetches any property from package.json using short prefix `jso dep` is same as `cat package.json | grep dependencies`",
  "main": "src/json-package.js",
  "scripts": {
    "test": "mocha --harmony src/*-spec.js",
    "lint": "standard bin/*.js src/*.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "commit": "git-issues && commit-wizard",
    "issues": "git-issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/json-package.git"
  },
  "files": [
    "bin",
    "src/*.js",
    "!src/*-spec.js"
  ],
  "keywords": [
    "json",
    "package",
    "show",
    "cli",
    "utility",
    "short",
    "prefix",
    "npm"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/json-package/issues"
  },
  "homepage": "https://github.com/bahmutov/json-package#readme",
  "devDependencies": {
    "check-more-types": "2.3.0",
    "git-issues": "1.2.0",
    "lazy-ass": "1.3.0",
    "mocha": "2.3.4",
    "pre-git": "2.0.2",
    "really-need": "1.7.2",
    "semantic-release": "^4.3.5",
    "standard": "5.4.1"
  },
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run lint",
        "npm test"
      ],
      "pre-push": [],
      "post-commit": [],
      "post-merge": []
    }
  }
}
